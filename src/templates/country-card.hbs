{{#each this}}
<div class="country-title">
      <h2 class="country-name">Country: {{name}}</h2>
      <div class="country-flag">
        <img src="{{flag}}" alt="{{name}}" width = "150px">
        </div>
        </div>
<div class="country-info">
      <p class="country-capital">Capital: {{capital}}</p>
     <p class="country-area">Area: {{area}}</p>
      <p class="country-population">Population: {{population}}</p>
      <p class="country-languages">Languages: </p>
      <ul>
         {{#each languages}}
<li class="language-item">{{this.name}}</li>
                {{/each}} 
      </ul>
</div>
    
{{/each}} 